<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <div class="container mx-auto px-4 py-8 max-w-5xl">
      <!-- Welcome Header -->
      <div class="flex justify-between items-center mb-8 border-b pb-4">
        <a href="/admin/orders?userId=<%= user._id %>" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100 transition">View <%= user.fullName %>'s Order History</a>
        <h2 class="text-lg font-medium text-gray-700">User ID: <span class="text-red-500"><%= user._id %></span></h2>
      </div>
    
      <!-- Profile Information -->
      <div class="mb-12">
        <h1 class="text-2xl font-medium text-red-500 mb-6">Profile of User '<%= user.fullName %>'</h1>
        
        <!-- Profile Form -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div>
              <label class="block text-gray-700 mb-2">Full Name</label>
              <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"><%= user.fullName %></p>
            </div>
            
            <div>
              <label class="block text-gray-700 mb-2">Email</label>
              <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"><%= user.email %></p>
            </div>
            
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div>
              <label class="block text-gray-700 mb-2">Status</label>
              <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">This user is <%= user.status %>.</p>
            </div>
            
            <div>
              <label class="block text-gray-700 mb-2">Loyalty Points</label>
              <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"><%= user.ownedLoyaltyPoints.toLocaleString() %></p>
            </div>
            
          </div>

          <div>
              <label class="block text-gray-700 mb-2">User Created At</label>
              <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"><%= new Date(user.createdAt).toDateString() %></p>
            </div>
    
    
          
    
        <!-- Shipping Addresses -->
        <h2 class="text-xl font-medium text-gray-700 mb-4 mt-12 border-b pb-2">Shipping Addresses</h2>
        
        <!-- Additional Addresses -->
        <% user.addresses.forEach(address => { %>
        <div class="border border-gray-200 rounded-md p-4 mb-4 relative bg-gray-50">
            <% if (user.defaultAddress === address._id) {%>
                <span class="absolute top-4 right-4 bg-red-500 text-white text-xs px-2 py-1 rounded-md">Default</span>
            <% } %>
            
          <h3 class="font-medium"><%= address.title %> Address</h3>
          <p class="text-gray-600"><%= address.address %></p>
          <p class="text-gray-600"><%= address.city %>, <%= address.state %>, <%= address.zip %></p>
          <p class="text-gray-600"><%= address.country %></p>
        </div>
        <% }) %>
    
    
        
      </div>

      <div class="flex justify-end space-x-4 mt-8">
            <a href="/admin/users" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100 transition">back</a>
          </div>
    </div>

    <%- include('../partials/footer') %>

    <%- include('../partials/flash') %>

  <script src="/js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
  </body>
</html>